<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="下午6:00" />

            <ImageView
                android:id="@+id/flag"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_weight="0"
                android:background="@drawable/map_flag2"
                android:paddingRight="10dp" />

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="下午9:00" />
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="0.06"
            android:background="@color/zhihu_album_dropdown_thumbnail_placeholder"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="0"
                     />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"
                    android:text="火車站集合"
                    android:textColor="@color/dracula_album_dropdown_thumbnail_placeholder"
                    android:textSize="22dp"
                    android:textStyle="bold"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/map_flag" />

                <TextView
                    android:id="@+id/area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="中壢火車站"

                    android:textColor="@color/buttonPrimary"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/money_icon" />

                <TextView
                    android:id="@+id/cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="150$"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="14dp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="27dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/line"
            android:layout_width="2dp"
            android:layout_height="35dp"
            android:background="@color/zhihu_capture"
            android:paddingLeft="250dp" />

    </LinearLayout>


</LinearLayout>